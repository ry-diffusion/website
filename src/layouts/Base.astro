---
// import "@fontsource/space-grotesk";

interface Props {
    title?: string;
    description?: string;
}

import { getLangFromUrl } from "../i18n/utils";
import CSS from "../styles/Base.module.scss";
const lang = getLangFromUrl(Astro.url);

const { title, description } = Astro.props;
---

<html lang={lang}>
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width" />
        <title>{title ?? "Ryster's website"}</title>
        <meta
            name="description"
            content={description ?? "Welcome to Ryster's website"}
        />
        <link rel="icon" href="https://github.com/ry-diffusion.png" />
    </head>

    <body class={CSS.Base}>
        <slot />
    </body>
</html>

<style is:global lang="scss">
    @use "../styles/Pallete.scss" as p;
    @import url("https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300..700&display=swap");

    * {
        font-family: "Space Grotesk";
        color: p.$textColor;
    }
</style>
